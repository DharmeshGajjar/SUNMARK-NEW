<script>
    $(document).ready(function () {
        var godownVou = $('#godownVou').val();
        if (godownVou != null && godownVou != '') {
            GoToAddTab()
        }
        else {
            GoToListTab()
        }
    });

    function GoToAddTab() {
        $('#custom-tabs-three-list-tab').removeClass('active');
        $('#custom-tabs-three-add-tab').addClass('active');

        $('#custom-tabs-three-list').removeClass('active');
        $('#custom-tabs-three-add').addClass('active');
        $('#custom-tabs-three-add').addClass('show');
        document.getElementById('date').focus();
    }

    function GoToListTab() {
        $('#custom-tabs-three-list-tab').addClass('active');
        $('#custom-tabs-three-add-tab').removeClass('active');

        $('#custom-tabs-three-list').addClass('active');
        $('#custom-tabs-three-list').addClass('show');
        $('#custom-tabs-three-add').removeClass('active');
        $('#custom-tabs-three-add').removeClass('show');
        $('#txtReportSearchDataTable').focus();
    }
</script>

<script>
    var isRecentCalledEsc = false;
    var isRecentCalledAddRows = false;
    var isRecentCalledSave = false;

    (function (code) {
        code(window.jQuery, document, window);
    }(function ($, document, window) {
        $(function () {
            $(window)
                .initKeyboard({ debug: 1 })
                .on('F2', function () {
                    GoToAddTab()
                }).on('F10', function () {
                    if (!isRecentCalledSave) {
                        $("#btnSave").click();
                        isRecentCalledSave = true;
                        setTimeout(function () {
                            isRecentCalledSave = false;
                        }, 1000)
                    }
                })
                .on('Alt+L', function () {
                    GoToListTab();
                })
                .on('Alt+I', function () {
                    if (!isRecentCalledAddRows) {
                        isRecentCalledAddRows = true;
                        AddRows();
                        setTimeout(function () {
                            isRecentCalledAddRows = false;
                        }, 500)
                    }

                })
                .on('Alt+C', function () {
                    if (confirm("Do you want to exit without save?")) {
                        location.href = '/LocationTransfer/Index'
                    }
                    else {
                        $('#date').focus();
                    }

                }).on('Escape', function () {
                    if (!isRecentCalledEsc) {
                        isRecentCalledEsc = true;
                        if (confirm("Do you want to exit without save?")) {
                            location.href = '/LocationTransfer/Index'
                        }
                        //else {
                        //    $('#date').focus();
                        //}
                        setTimeout(function () {
                            isRecentCalledEsc = false;
                        }, 500)
                    }

                })
        });
    }));
</script>

<script>
    var isRecentCalled = false;

    $(function () {
        loadData();
        var pageIndex = '';
        var pageSize = '';
        var totalRecord = '';
        var isDelete = '@Html.Raw(userRight.IsDelete)';
        var isEdit = '@Html.Raw(userRight.IsEdit)';
    })

    var timer = null;

    $('#txtReportSearchDataTable').keyup(function (e) {
        if (e.keyCode >= 112 && e.keyCode <= 123) {
            e.preventDefault();
            return false;
        }
        else {
            clearTimeout(timer);

            timer = setTimeout(loadData, 1000)
        }

    });

    function loadData(pageIndex, columnName, sortBy) {
        isRecentCalled = true;
        if (pageIndex == undefined || pageIndex == "" || pageIndex == "0" || pageIndex == 0) {
            pageIndex = 1;
        }
        var layoutId = $('.drpReportLayout').val();

        if (!layoutId) {
            $('.drpReportLayout').val($('.drpReportLayout').children('option').eq(1).prop('value'));
            //SetSelect2()

        }
        if (!columnName) {
            columnName = '';
        }
        if (!sortBy) {
            sortBy = '';
        }
        $('.dataTable').html();
        $.ajax({
            url: '/LocationTransfer/GetReportView',
            type: 'GET',
            data: { pageIndex: pageIndex, pageSize: $('#drpReportPageNoDatable').val(), searchValue: $('#txtReportSearchDataTable').val(), gridMstId: $('.drpReportLayout').val(), columnName: columnName, sortby: sortBy },
            dataType: 'HTML',
            traditional: true, // add this
            success: function (data) {
                $('.dataTable').html(data);
                setTimeout(function () {
                    isRecentCalled = false;
                }, 2000)
            },
            failure: function (response) {
                errorMessage(response);
            }
        });
    }

    $('#btnExportToExcel').click(function () {
        window.location.href = "/LocationTransfer/ExportToExcelPDF?gridMstId=" + $('.drpReportLayout').val() + "&searchValue=" + $('#txtReportSearchDataTable').val() + "&type=1";
    })

    $('#btnExportToPDF').click(function () {
        window.location.href = "/LocationTransfer/ExportToExcelPDF?gridMstId=" + $('.drpReportLayout').val() + "&searchValue=" + $('#txtReportSearchDataTable').val() + "&type=2";
    })
</script>

<script>
    function AddRows() {
        var previousRow = $('#tblGrid').children('tbody').children('tr:last');
        if (previousRow != null) {
            var fromLocation = $(previousRow).children('td').eq(1).children('select').val();
            var toLocation = $(previousRow).children('td').eq(2).children('select').val();
            var lotNo = $(previousRow).children('td').eq(3).children('select').val();
            var product = $(previousRow).children('td').eq(4).children('select').val();
            var pcs = $(previousRow).children('td').eq(5).children('input').val();
            var qty = $(previousRow).children('td').eq(6).children('input').val();
            if (fromLocation != null && fromLocation != "" && toLocation != null && toLocation != "" && lotNo != null && lotNo != "" && product != null && product != "" && pcs != null && pcs != "" && qty != null && qty != "") {
                $('#tblGrid').children('tbody').children('tr:last').children('td').eq(6).children('input').removeClass('focusIn')
                var html = $('#tblGrid').children('tbody').children('tr:last').html();

                $('#tblGrid').children('tbody').children('tr:last').after("<tr>" + html + "</tr>");
                ResetValues();
                SetSerialNumber();
                SetName();
                /*SetSelect2*/();
                isRecentCall = true
                setTimeout(function () {
                    isRecentCall = false;
                }, 500)

                $('#tblGrid').children('tbody').children('tr:last').children('td').eq(1).children('select').focus();
            }
            else {
                showErrorMessage("Please enter all required fields");
            }
        }
    }

    function DeleteRows(obj) {
        Swal.fire({
            title: 'Are you sure want to delete row?',
            showCancelButton: true,
            confirmButtonText: 'Delete',
        }).then((result) => {
            if (result.isConfirmed) {
                if ($(obj).closest('tr').parent('tbody').children('tr').length <= 1) {
                    ResetValues();
                    SetSerialNumber();
                    SetName();
                }
                else {
                    $(obj).closest('tr').remove();
                    SetSerialNumber();
                    SetName();
                }
            } else if (result.isDenied) {
            }
        })
    }

    function SetSerialNumber() {
        var count = 1;
        $('#tblGrid').children('tbody').children('tr:not(tr.lastRow)').each(function () {
            $(this).children('td').eq(0).children('input').val(count);
            count = parseInt(count) + 1;
        });
    }

    function SetName() {
        $('#tblGrid').children('tbody').children('tr:not(tr.lastRow)').each(function (i) {
            $(this).children("td").eq(1).children("select").attr("name", "fromLocationGridVou");
            $(this).children("td").eq(1).children("select").attr("Id", "fromLocationGridVou" + i + "");
            $(this).children("td").eq(2).children("select").attr("name", "toLocationGridVou");
            $(this).children("td").eq(2).children("select").attr("Id", "toLocationGridVou" + i + "");
            $(this).children("td").eq(3).children("select").attr("name", "lotNoGridVou");
            $(this).children("td").eq(3).children("select").attr("Id", "lotNoGridVou" + i + "");
            $(this).children("td").eq(4).children("input").attr("name", "productGridVou");
            $(this).children("td").eq(4).children("input").attr("Id", "productGridVou" + i + "");
            $(this).children("td").eq(5).children("input").attr("name", "pcsGrid");
            $(this).children("td").eq(5).children("input").attr("Id", "pcsGrid" + i + "");
            $(this).children("td").eq(6).children("input").attr("name", "qtyGrid");
            $(this).children("td").eq(6).children("input").attr("Id", "qtyGrid" + i + "");
        });
    }

    function ResetValues() {
        $('#tblGrid').children('tbody').children('tr:last').addClass('AddRows');
